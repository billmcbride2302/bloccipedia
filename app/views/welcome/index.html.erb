<div id="wiki-index-all">
<ol class="breadcrumb">
    <li><%= link_to "About", welcome_about_path %></li>
    <% if user_signed_in? %>
    <li> </li>  
    <% else %>      
    <li><%= link_to "Sign Up", new_user_registration_path, class: 'btn btn-primary' %></li>
  <% end %> 
  <li class="pull-right"><%= link_to "Edit Profile", edit_user_registration_path %></li>
</ol>


<div class="heading">
  <h1 id="index-title"> <span id="index-bloc"> Bloc</span>ipedia</h1>

  <div class="box">
    <h3 id="index-slogan"> Create Wikis with Friends for FREE. Keep them private a penny per month. </h3>
  </div>
</div>


<div class="row" id="index-wikis">
  <div class="col-md-6">
    <h4 class="free-location"> Create Public Wikis </h4>
    <div class="free-button">
      <%= link_to "Public Wikis", wikis_path, class: 'btn btn-success' %>
    </div>
  </div>

 

  <div class="col-md-5">
    <h4 class='premium-location'> Create Private Wikis </h4>
    <div class='premium-button'>
    <% if current_user.role == 'premium' || current_user.role == 'admin' %>
        <%= link_to "Private Wikis", new_charge_path, class: 'btn btn-success' %>
      <% else %>
        <%= link_to "Upgrade to Premium!", edit_user_registration_path, class: 'btn btn-info' %>
      <% end %>    </div>
  </div>
</div>
</div> 